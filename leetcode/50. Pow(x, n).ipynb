    "class Solution:\n",
    "    def myPow(self, x: float, n: int) -> float:\n",
    "        if n < 0: x, n = 1/x, -n\n",
    "        power = 1\n",
    "        while n:\n",
    "            if n%2 == 1: power *= x\n",
    "            x, n = x*x, n//2\n",
    "        return power"
   ]
